= form_with model: [ :admin, @work ], local: true do |f|
  %p.form-group
    = f.label :name, "作品名："
    = f.text_field :name, class: 'form-control'
  
  %p.form-group
    = f.label :category, "カテゴリー："
    = f.select :category, Work.categories_i18n.keys.map{|k| [I18n.t("enum.work.category.#{k}"), k]}

  %p.form-group
    = f.label :image, "画像："
    = f.file_field :image

  %p.form-group
    = f.label :description, "作品の説明:"
    = f.text_area :description, class: 'form-control'

  %p.form-group
    = f.label :time, "制作時間："
    = f.text_field :time

    -# %p.form-group
    -#   = f.label :softwear, "使用ソフト："
    -#   = f.text_field :softwear
  
  %p.form-group
    = f.label :date, "制作時期："
    = f.text_field :date

  =f.submit class: "btn btn-primary"
